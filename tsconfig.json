{
	"compilerOptions": {
		"target": "es6",
	    "module": "commonjs",
	    "moduleResolution": "node",
	    "allowJs": false,
	    "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "resolveJsonModule": true,
	    "declaration": false,
	    "rootDir": ".",
		"esModuleInterop" : true
  	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}